<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:300" rel="stylesheet">
    <link href="../styles/SiteStyle.css" rel="stylesheet"/>
    <link href="../styles/mainstyle.css" rel="stylesheet"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="shortcut icon" type="image/x-icon" href="SGlogo.png"/>
    <title>WorkInProgress's Homepage</title>
    <script src="../dustjs-linkedin/dust-core.min.js" charset="utf-8"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="../../js/views.js"></script>
    <script src="../../js/fetch.js"></script>
    <script src="../main.js"></script>
    <script src="../../js/watching.js"></script>

</head>

<body>

<header>
    <h1 class="Title">WorkInProgress</h1>
    <img src="../animeImages/video-player.svg"  class="usilogo" align="left"/>
    <h1 class="current_Page"></h1>
</header>

<main>

    <!--===========================NavigationBar====================================================================-->

    <nav class="navigation">
        <ul>
            <li><a class="link"  href="../home" ><b><img id="Homeimage"src="../animeImages/friend.svg"> Home </b></a></li>
            <li><a class="link" href="../upload"id="Current-page"><b><img id="Homeimage"src="../animeImages/cloud-computing.svg"> Upload </b></a></li>
            <!-- <li><a class="link" href="../favorites"><b><img id="Homeimage"src="../animeImages/stars.svg">Starred</b></a></li> -->
            <li><a class="link" href="../all_rooms"><b><img id="Homeimage"src="../animeImages/group.svg"><br> Live Room </br></b></a></li>
        </ul>
    </nav>

    <!--===========================Maincontent-Upload====================================================================-->


    <div class='maincontent_room'>
    <input class="unique_room_name" type="hidden" value="{k}">
        <div class="container_video">


            <br/>


            {#last_watched}
            {#saga}
            <h3 class="">{.name}</h3>
            {/saga}
            <video onseeking="updateSeeked()" controls  class="bigone" src="../{.file}"></video>
            {/last_watched}



        </div>

        <div class="container_rest">
            <div class="c1">
                {#saga}
                <div>
                    {.name}<br/><br/>
                    <image style='max-height:250px;' src='../{.image}'/>
                    <br/>
                </div>
                {/saga}
            </div>
            <div class="c2">

            {#episode_list}

            <button  class="next_episodes" onclick="setWatchingRoom('../{.file}')">Watch {.name}</button><br/>
            {/episode_list}
            </div>

            <div class="c3">
                <div class="window">
                    <div class ="output"></div>
                    <div class ="feedback"></div>
                </div>
                <div id="window">
        <div id ="output_chat"></div>
        <div id ="feedback"></div>
      </div>
      <input id="handle"type="hidden" contenteditable="false"value="{username}"/>
      <input id="message" type="text" placeholder="Type a message..."/>
      <button id="send">Send</button>
            </div>
        </div>
    </div>

    <!--===========================Sidebar====================================================================-->
    <div class="sidebar">
      <ul>
      <li><a href="../logout" id="Current-page"><b><img id="Homeimage"src="../animeImages/cloud-computing.svg"></b></a></li>
      <li><a class="sidelink" href="../logout"><b>Logout</b></a></li>
      </ul>
    </div>
</main>

<footer>
  <p id="footer">&copy;Jacopo-Lorenzo-Mihail-Sergio</p>
</footer>

</body>
<script src="../../js/socket_main.js"></script>
</html>
