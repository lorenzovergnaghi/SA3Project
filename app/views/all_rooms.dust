<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:300" rel="stylesheet">
    <link href="styles/SiteStyle.css" rel="stylesheet"/>
    <link href="styles/mainstyle.css" rel="stylesheet"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="shortcut icon" type="image/x-icon" href="SGlogo.png"/>
    <title>WorkInProgress's Homepage</title>
    <script src="dustjs-linkedin/dust-core.min.js" charset="utf-8"></script>
    <script src="js/views.js"></script>
    <script src="js/fetch.js"></script>
    <script src="main.js"></script>

</head>

<body>

    <header>
            <h1 class="Title">StreamFast</h1>
        <img src="animeImages/video-player.svg"  class="usilogo" align="left"/>
    </header>

    <main>

    <!--===========================NavigationBar====================================================================-->

        <nav class="navigation">
            <ul>
                <li><a class="link" href="home"><b><img id="Homeimage"src="animeImages/friend.svg"> Home </b></a></li>
                <li><a class="link"href="upload"><b><img id="Homeimage"src="animeImages/cloud-computing.svg"> Upload </b></a></li>
                <!-- <li><a class="link"href="favorites"><b><img id="Homeimage"src="animeImages/stars.svg">Starred</b></a></li> -->
                <li><a class="link"href="all_rooms" id="Current-page"><b><img id="Homeimage"src="animeImages/group.svg"><br> Live Room </br></b></a></li>
            </ul>
        </nav>

    <!--===========================Maincontent-Upload====================================================================-->

    <div class='maincontent'>
        <div class="div_search_mobile">
            <div <b id="Search-text">Search</b> </div>
        <input class='search' type="text" ></input>
    </div>
        <form method="POST" action="/room">
          <input type="text" name="newRoomName" placeholder="You're new room name"><br/>
          <select name="saga_id">
          {#y}
            <option value="{._id}">{.name}</option>
            {/y}
          </select>
  <br><br>
        </form>
        <div class="output">
            {#x}
               <div style="color:white;background-color:purple;">
               {.name}<br/>
               {._id}<br/>
               <a href="/room/:{._id}"><b>Join</b></a>
               <form method='POST' action='/editSaga/room/:{._id}'>
                 <input type="text" name="name" contenteditable="true">
                 <button type="submit">Post new name</button>
               </form>
               <br/>
               <form method='POST' action='/editSaga/room/delete/:{._id}'>
               <button type="submit">Delete Room</button>
             </form>

               </div>
            {/x}
        </div>
    </div>
        <!--===========================Sidebar====================================================================-->
        <div class="sidebar">
          <ul>
          <li><a href="logout" id="Current-page"><b><img id="Homeimage"src="animeImages/exit.svg"></b></a></li>
          <li><a class="sidelink" href="logout"><b>Logout</b></a></li>
          </ul>
        </div>
    </main>

    <footer>
      <p id="footer">&copy;Jacopo-Lorenzo-Mihail-Sergio</p>
    </footer>

</body>
<script>
    var OUT = undefined;
    let events = ['keyup'];
    events.forEach(function(ev){
        document.querySelector('.search').addEventListener(ev , function(event){
            event.preventDefault();
            let filter = document.querySelector('.search').value;
            if (filter !== "") {
                doJSONRequest("GET", "/search/room?name="+filter, {}, undefined).then(function(obj){
                    var model = {
                        x : obj
                    };
                    dust.render('partials/episode_room',model,function(err, out){
                        if (err) {
                            console.log('err!1');
                            console.log(err);
                        }
                        var latestEl = document.querySelector('.output');
                        latestEl.innerHTML = out;
                    })
                })
            }else {

                doJSONRequest("GET", "/search/room/all", {}, undefined).then(function(obj){
                    var model = {
                        x : obj
                    };
                    dust.render('partials/episode_room',model,function(err, out){
                        if (err) {
                            console.log('err!2');
                        }
                        var latestEl = document.querySelector('.output');
                        latestEl.innerHTML = out;
                    })
                })
            }
        });
    })

</script>
</html>
